{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "module": "commonjs",
    "target": "ES2023",
    // For nodejs:
    "lib": ["ES2023"],


    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,


    // Recommended Options
    "strict": true,
    "skipLibCheck": true,
  }
}
